@model AddBookingModel

@{
    ViewData["Title"] = "Details";
}

<div class="container mx-auto">
    <div class="w-50 mt-4">
        <img src=@Model.Viewing.MovieToShow.ImageLink class="img-thumbnail">
    </div>
    <div class="mt-2 w-100 mb-2 mx-auto">
        <h2 class="">@Html.DisplayFor(model => Model.Viewing.MovieToShow.Title)</h2>
        <dl class="row">
            <dt class="col-sm-2">
                Genre
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => Model.Viewing.MovieToShow.Genre)
            </dd>
            <dt class="col-sm-2">
                Age Restriction
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => Model.Viewing.MovieToShow.AgeRestriction)
            </dd>
            <dt class="col-sm-2">
                Time of Screening
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => Model.Viewing.TimeOfScreening)
            </dd>
            <dt class="col-sm-2">
                Locale
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => Model.Viewing.LocaleToShow.LocaleName)
            </dd>
            <dt class="col-sm-2">
                Available Seats
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => Model.Viewing.AvailableSeats)
            </dd>
        </dl>
        <form asp-controller="Booking" asp-action="AddBooking" asp-route-id="@Model.Viewing.Id" class="w-50">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumberOfBookedSeats" class="control-label">Number of seats to book</label>
                <input asp-for="NumberOfBookedSeats" class="form-control" />
                <span asp-validation-for="NumberOfBookedSeats" class="text-danger"></span>
            </div>

            <div class="form-group">
                @if (Model.Viewing.AvailableSeats >= Model.NumberOfBookedSeats)
                {
                    <input type="submit" value="Book" class="btn btn-dark w-100" />
                }
                else
                {
                    <input type="submit" value="Not that many seats available" class="btn btn-dark w-100 disabled" />
                }
            </div>
        </form>
    </div>
</div>



