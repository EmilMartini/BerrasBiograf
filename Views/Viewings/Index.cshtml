@model IEnumerable<Viewing>

@{
    ViewData["Title"] = "Details";
}
@if (Model.Count() > 0)
{
    @foreach (var item in Model)
    {
    <div class="container mt-2 mb-2">
        <h1>@Html.DisplayFor(model => item.MovieToShow.Title)</h1>

        <hr>
        <dl class="row">
            <dt class="col-sm-2">
                Title
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.MovieToShow.Title)
            </dd>
            <dt class="col-sm-2">
                Genre
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.MovieToShow.Genre)
            </dd>
            <dt class="col-sm-2">
                Time of Screening
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.TimeOfScreening)
            </dd>
            <dt class="col-sm-2">
                Locale
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.LocaleToShow.LocaleName)
            </dd>
            <dt class="col-sm-2">
                Available Seats
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.AvailableSeats)
            </dd>
            <dd class="col-sm-10">
                <img src=@item.MovieToShow.ImageLink class="img-thumbnail w-25 h-auto">
            </dd>
        </dl>
        <a asp-action="BookViewing" asp-route-id="@item.Id" class="btn btn-dark w-25 m-1">Book Viewing</a> <br />
    </div>
    }
}
else
{
    <div class="container text-center">
        <a asp-action="Seed" class="btn btn-dark w-25 m-1">Seed</a>
    </div>
}

