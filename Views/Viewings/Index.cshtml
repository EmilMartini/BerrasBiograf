@model IEnumerable<Viewing>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Berras Biograf</h1>
<h3 class="text-center">Is now showing</h3>
<br/>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Genre
            </th>
            <th>
                Available Seats
            </th>
            <th>
                Date of Viewing
            </th>
            <th>
                Locale Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MovieToShow.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieToShow.Genre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AvailableSeats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeOfScreening.Day)/@Html.DisplayFor(modelItem => item.TimeOfScreening.Month)
                @Html.DisplayFor(modelItem => item.TimeOfScreening.DayOfWeek)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocaleToShow.LocaleName)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
