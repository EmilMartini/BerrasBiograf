@model Booking
@{
    ViewData["Title"] = "Confirmation";
}

<h1>Booking Confirmation</h1>
<div class="container mx-auto">
    <div class="w-25 mt-4">
        <img src=@Model.Viewing.MovieToShow.ImageLink class="img-thumbnail">
    </div>
    <div class="mt-2 w-100 mb-2 mx-auto">
        <h2 class="">@Model.Viewing.MovieToShow.Title</h2>
        <dl class="row">
            <dt class="col-sm-2">
                Genre
            </dt>
            <dd class="col-sm-10">
                @Model.Viewing.MovieToShow.Genre
            </dd>
            <dt class="col-sm-2">
                Age Restriction
            </dt>
            <dd class="col-sm-10">
                @Model.Viewing.MovieToShow.AgeRestriction
            </dd>
            <dt class="col-sm-2">
                Time of Screening
            </dt>
            <dd class="col-sm-10">
                @Model.Viewing.TimeOfScreening
            </dd>
            <dt class="col-sm-2">
                Locale
            </dt>
            <dd class="col-sm-10">
                @Model.Viewing.LocaleToShow.LocaleName
            </dd>
            <dt class="col-sm-2">
                Booked Seats
            </dt>
            <dd class="col-sm-10">
                @Model.NumberOfBookedSeats
            </dd>
        </dl>
    </div>
    <div class="mt-2">
        <a asp-controller="Home" asp-action="Index" class="btn btn-dark">Return to home</a> <br />
    </div>
    <div class="mt-2">
        <a asp-action="Index" class="btn btn-success">Continue</a>
    </div>
</div>